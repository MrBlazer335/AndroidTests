<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewExerciseStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статистика по упражнениям:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/layoutExerciseStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textViewExerciseStats" />

    <Button
        android:id="@+id/buttonClearStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Очистить статистику"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>